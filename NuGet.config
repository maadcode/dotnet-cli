<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <!-- Clear any inherited sources -->
    <clear />
    
    <!-- Add official NuGet.org -->
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
    
    <!-- Add local package source (priority 1: development) -->
    <add key="local" value="./nupkg" />
    
    <!-- Add GitHub Packages (priority 2: shared/production) -->
    <add key="github" value="https://nuget.pkg.github.com/maadcode/index.json" />
  </packageSources>
  
  <!-- Package Source Mapping: specify which packages come from which source -->
  <packageSourceMapping>
    <!-- ConsoleCLILibrary2 viene de la fuente local -->
    <packageSource key="local">
      <package pattern="ConsoleCLILibrary2" />
    </packageSource>
    
    <!-- ConsoleCLILibrary viene de GitHub Packages -->
    <packageSource key="github">
      <package pattern="ConsoleCLILibrary" />
    </packageSource>
    
    <!-- Todos los demás paquetes de NuGet.org -->
    <packageSource key="nuget.org">
      <package pattern="*" />
    </packageSource>
  </packageSourceMapping>
</configuration>
